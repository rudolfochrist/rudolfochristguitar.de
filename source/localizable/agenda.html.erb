---
title: Agenda
---

<section>
  <h2>Upcoming</h2>
  <p id="no-upcoming-note" class="hidden">Derzeit gibt es keine anstehenden Veranstaltungen.</p>
  <ul id="upcoming"></ul>
</section>

<section>
  <h2>Events</h2>
  <ul id="events">
    <% data.agenda.each do |item| %>
        <li class="event" data-date="<%= item.date %>">
            <div class="date">
                <%= date_string item.date %>
                &mdash;
                <%= time_string item.date %>
            </div>
            <div class="event-name">
                <% if item.ensemble %>
                    <strong><%= item.ensemble %>:</strong>
                <% end %>
                <%= item.title %>
            </div>
            <div class="event-location">
                <%= item.location %>
            </div>
            <% if item.note %>
                <p>
                    <%= item.note %>
                </p>
            <% end %>
            <% if item.link %>
                <%= link_to "Link", item.link  %>
            <% end %>
        </li>
    <% end %>
  </ul>
</section>
